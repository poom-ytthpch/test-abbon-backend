generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  expenses Expense[]
}

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  expenses Expense[]
}

model Expense {
  id         String   @id @default(uuid())
  title      String
  amount     Float
  date       DateTime
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  notes      String?
}
